.pageme-set {
  overflow: hidden;
}

.bg {
  float: left;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background-image: url('https://img4.kuwo.cn/star/albumcover/500/99/45/2821476372.jpg');
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  filter: blur(15px);
}
.bg2{
  float: left;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background: linear-gradient(120deg, pink 40%, pink 90%);
}

.pt {
  clear: both;
  width: 100vw;
  position: absolute;
}

.playBtn{
  height: 50px;
  width: 100%;
}
.posiClass{
  background-color: #f5f5f5;
  box-sizing: border-box;
  width: 100%;
  height: 50px;
  position: fixed;
  bottom: 0;
  padding-left: 4%;
  padding-right: 4%;
}