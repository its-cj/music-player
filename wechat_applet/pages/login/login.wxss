/* pages/login/login.wxss */
.login-big {
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg,black -10%,grey 20%, black 100%);
  display: flex;
  padding-top: 50px;
  box-sizing: border-box;
}
.img-set{
  display: block;
  width: 100%;
}
.flex-one{
  flex: 1;
}
.title-set{
  margin: 0 auto;
  text-align: center;
  margin-bottom: 20px;
  width: 80%;
}
.login-open{
  width: 50%;
  border-radius: 15px;
  
  color: white;
  line-height: 30px;
  text-align: center;
  margin: 0 auto;
  margin-bottom: 20px;
}
.login{
  background-color: rgb(0, 206, 0);
}
.phone{
  background-color: rgb(253, 126, 7);
}
.message{
  background-color: rgb(255, 255, 255);
  color: rgb(44, 44, 44);
}
.text-nb{
  padding: 4%;
  font-size: 12px;
  text-align: center;
}
.span-change{
  color: skyblue;
}
.check-box{
  width: 10px;
  height: 10px;
  border-radius: 50%;
  display: inline-block;
  border: 1px solid black;
}
.check-box2{
  width: 10px;
  height: 10px;
  border-radius: 50%;
  display: inline-block;
  border: 1px solid black;
  background-color: skyblue;
}