.container {
  /* position: relative; */
}

.swiperClassSet {
  padding: 0 4%;
  margin-bottom: 20px;
}
.swiper image {
  width: 100%;
  height: auto;
}
.swiper{
  margin-bottom: 10px;
}

.search-false {
  width: 90%;
  margin: 0 auto;
  border-radius: 15px;
  height: 30px;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  margin-bottom: 20px;

}

.search-false>view {
  margin: 0 auto;
  display: flex;
  align-items: center;
}

.font-set {
  display: inline;
  font-size: 15px;
  color: #8a8a8a;
}

.hotMusic-big {
  width: 92%;
  margin: 0 auto;
  margin-bottom: 10px;
}

.index-music {
  overflow: hidden;
}

.item-hotmusic {
  width: 28%;
  /* display: inline-block; */
  box-sizing: border-box;
  float: left;
  margin-left: 4%;
  margin-bottom: 10px;

  /* padding-left: 4%;
  padding-right: 4%;
  padding-bottom: 10px; */
}

.hotMusic-oneBig {
  margin-bottom: 20px;
}

.newMusic-oneBig {
  margin-bottom: 20px;
}

.recomMusic-oneBig {
  margin-bottom: 20px;
}

.rankMusic-item {
  width: 92%;
  margin: 0 auto;
  border-radius: 20px;
  overflow: auto;
  margin-bottom: 10px;
}

.rankMusic-oneBig {
  margin-bottom: 10px;
}

.playBtn {
  height: 40px;
  width: 100%;
}

.posiClass {
  background-color: #f5f5f5;
  box-sizing: border-box;
  width: 100%;
  height: 50px;
  position: fixed;
  bottom: 0;
  padding-left: 4%;
  padding-right: 4%;
}

